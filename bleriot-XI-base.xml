<?xml version="1.0"?>

<PropertyList>

  <sim>
 
    <author type="string">BARANGER Emmanuel</author>
    <status type="string">0.1 Alpha</status>
    <aircraft-version>0.2</aircraft-version>
   
    <fuel-fraction>1.0</fuel-fraction>
  
    <sound>
      <path>Aircraft/bleriot-XI/Sounds/bleriot-XI-sound.xml</path>
    </sound>
    
    <startup>
      <splash-texture>Aircraft/bleriot-XI/bleriot-XI-splash.rgb</splash-texture>
    </startup>

    <virtual-cockpit archive="y">true</virtual-cockpit>
    <allow-toggle-cockpit archive="y">false</allow-toggle-cockpit>
    
    <model>
      <path>Aircraft/bleriot-XI/Models/bleriot-XI.xml</path>
    </model>
    
    <view n="0">
      <internal archive="y">true</internal>
      <config>
        <x-offset-m archive="y"> 0.000 </x-offset-m>	<!---Right-->
        <y-offset-m archive="y"> 1.125 </y-offset-m>	<!--Up-->
        <z-offset-m archive="y"> 0.075 </z-offset-m>	<!--Back-->
        <pitch-offset-deg> 0 </pitch-offset-deg>
        <default-field-of-view-deg>60</default-field-of-view-deg>
      </config>
    </view>

  </sim>

</PropertyList>
