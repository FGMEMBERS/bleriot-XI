<PropertyList>

  <sim include="Nasal/views.xml">

    <description>Bleriot XI (YASim)</description>
    <author>BARANGER Emmanuel (3F/FDM)</author>
    <status>0.3 Alpha</status>
    <aircraft-version>0.3</aircraft-version>

    <fuel-fraction>1.0</fuel-fraction>

    <sound>
      <path>Aircraft/bleriot-XI/Sounds/bleriot-XI-sound.xml</path>
    </sound>

    <startup>
      <splash-texture>Aircraft/bleriot-XI/bleriot-XI-splash.png</splash-texture>
    </startup>

    <model>
      <path>Aircraft/bleriot-XI/Models/bleriot-XI.xml</path>
      <livery>
        <file type="string">default</file>
      </livery>
    </model>

    <multiplay n="0">
      <chat_display>1</chat_display>
      <generic n="0"> 
        <int type="int" n="0">  0 </int>                                           <!--  0 immat -->
