<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>siege</object-name>
    <object-name>bidon1</object-name>
    <object-name>bidon2</object-name>
    <object-name>bidon3</object-name>
    <object-name>bidon4</object-name>
    <object-name>volant</object-name>

    <!-- Objets transparents -->
  </animation> 

  <!-- Pilote -->
  <model>
    <path>Aircraft/bleriot-XI/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -0.182 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.204 </z-m>
    </offsets>
  </model>

  <!-- Animation du manche -->
  <animation>
    <type>rotate</type>
    <object-name>volant</object-name>
    <property>surface-positions/elevator-pos-norm</property>
    <factor>10</factor>
    <center>
      <x-m> -0.319 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.119 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>volant</object-name>
    <property>surface-positions/aileron-pos-norm</property>
    <factor>10</factor>
    <center>
      <x-m> -0.319 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.119 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

  <!-- ALT -->
  <model>
    <path>Aircraft/bleriot-XI/Models/Interior/Instruments/alt/alt.xml</path>
    <offsets>
      <x-m> -0.43 </x-m>
      <y-m>  0.24 </y-m>
      <z-m>  0.58 </z-m>
      <heading-deg> -20 </heading-deg>
    </offsets>
  </model>
  
  <!-- ASI -->
  <model>
    <path>Aircraft/bleriot-XI/Models/Interior/Instruments/asi/asi.xml</path>
    <offsets>
      <x-m> -0.43 </x-m>
      <y-m> -0.24 </y-m>
      <z-m>  0.58 </z-m>
      <heading-deg> 20 </heading-deg>
    </offsets>
  </model>
  
  <!-- COMPASS -->
  <model>
    <path>Aircraft/bleriot-XI/Models/Interior/Instruments/boussole/boussole.xml</path>
    <offsets>
      <x-m> -0.39 </x-m>
      <y-m>  0.00 </y-m>
      <z-m>  0.48 </z-m>
      <pitch-deg> -60 </pitch-deg>
    </offsets>
  </model>
  
  <!-- TACHIMETER -->
  <model>
    <path>Aircraft/bleriot-XI/Models/Interior/Instruments/tach/tach.xml</path>
    <offsets>
      <x-m> -0.428 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.590 </z-m>
    </offsets>
  </model>
  
</PropertyList>
